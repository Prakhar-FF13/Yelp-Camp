<% include partials/header %>


<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1> Welcome to Yelp Camp </h1>
			<p> Check out our handpicked campgrounds !!! </p>
			<p>
				<a href="/campgrounds/new" class="btn btn-primary">Add new campground</a>
			</p>
		</div>
	</header>


	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% campgrounds.forEach( function(campground){ %>
			<div class="col-md-3 col-sm-6">
				<figure class="figure">
					<img src="<%= campground.image %>" class="img-thumbnail">
					<figcaption class="figure-caption"><h4><%= campground.name %></h4></figcaption>
					<p><a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a></p>
				</figure>
			</div>
		<% }); %>
	</div>

	<% include partials/footer %>
</div>